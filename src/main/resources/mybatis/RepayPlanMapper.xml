		,total_fee
		,payed_fee
		,overdue_deposit
		,deposit_way
		,should_deposit
		,remind_count
		)
		VALUES(
		#{code}
		,#{refType}
		,#{repayBizCode}
		,#{userId}
		,#{periods}
		,#{curPeriods}
		,#{repayDatetime}
		,#{repayCapital}
		,#{repayInterest}
		,#{payedAmount}
		,#{overplusAmount}
		,#{overdueAmount}
		,#{curNodeCode}
		,#{overdueHandler}
		,#{overdueHandleDatetime}
		,#{overdueHandleNote}
		,#{totalFee}
		,#{payedFee}
		,#{overdueDeposit}
		,#{depositWay}
		,#{shouldDeposit}
		,#{remindCount}
		)
	</insert>

	<insert id="insert_repayPlanList" parameterType="List">
		INSERT INTO
		tdh_repay_plan(
		code
		,ref_type
		,repay_biz_code
		,user_id
		,periods
