	</select>

	<insert id="insert_repayPlan" parameterType="repayPlan">
		INSERT INTO
		tdh_repay_plan(
		code
		,ref_type
		,repay_biz_code
		,user_id
		,periods
		,cur_periods
		,repay_datetime
		,repay_capital
