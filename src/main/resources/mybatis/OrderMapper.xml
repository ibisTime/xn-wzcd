		code = #{code}
	</update>
	
	<update id="update_comment" parameterType="order">
		UPDATE tmall_order
		SET
		status = #{status}
		,remark = #{remark}
		WHERE
		code = #{code}
	</update>
	
	<update id="update_payGroup" parameterType="order">
		UPDATE tmall_order
		SET
		pay_group = #{payGroup}
		,pay_type = #{payType}
		WHERE code = #{code}
	</update>
	
	<update id="update_yunfei" parameterType="order">
		UPDATE tmall_order
		SET
		yunfei = #{yunfei}
		WHERE code = #{code}
	</update>
	
	
	<update id="update_remove" parameterType="order">
		UPDATE tmall_order
		SET
		status = #{status}
		,remark= #{remark}
		WHERE code = #{code}
	</update>
</mapper>