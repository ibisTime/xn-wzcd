		,pay_datetime = #{payDatetime}
		,pay_type = #{payType}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE
		code = #{code}
	</update>
	
	<update id="update_paySuccess" parameterType="order">
		UPDATE tmall_order
		SET
		status = #{status}
